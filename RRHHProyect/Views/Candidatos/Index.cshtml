@model IEnumerable<Models.Models.Candidato>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PuestoAspira)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Competencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacitacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PuestoAspira.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Competencia.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacitacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDCandidato">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDCandidato">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDCandidato">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
